<!DOCTYPE html>
<html>
<head>
  <title>Facebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Facebook", topics_path, class: "navbar-brand" %>
      </div>
      <div id="navbar" class="collapse navbar-collapse navbar-right">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to 'マイページ', edit_user_registration_path %></li>
          <li><%= link_to 'ホーム', topics_path %></li>
          <li class="disabled"><a href="#contact"><s>友達検索</s></a></li>
          <li><%= link_to '友達リクエスト(ユーザー一覧)', users_path if user_signed_in? %></li>
          <li><%= link_to 'メッセージ', conversations_path if user_signed_in? %></li>
          <li class="disabled"><a href="#contact">お知らせ</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li class="disabled"><a href="#">ページ作成</a></li>
              <li class="disabled"><a href="#">グループ作成</a></li>
              <li class="disabled"><a href="#">参加しているグループ</a></li>
              <li class="disabled"><a href="#">広告を掲載</a></li>
              <li class="disabled"><a href="#">Facebook広告</a></li>
              <li class="disabled"><a href="#">アクティビティログ</a></li>
              <li class="disabled"><a href="#">ニュースフィードの設定</a></li>
              <li class="disabled"><a href="#">設定</a></li>
              <% if user_signed_in? %>
                <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to 'ログイン', new_user_session_path %></li>
                <li><%= link_to 'サインアップ', new_user_registration_path %></li>
              <% end %>
              <li class="divider"></li>
              <li class="dropdown-header">Nav header</li>
              <li><a href="#">Separated link</a></li>
              <li><a href="#">One more separated link</a></li>
            </ul>
          </li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

<%= yield %>

</body>
</html>
