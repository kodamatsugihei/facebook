<p id="notice"><%= notice %></p>

<div class="container">
  <div class="wrapper col-md-5 col-md-offset-4 col-sm-10">

  <h1>トピック一覧</h1>

  <% @topics.each do |topic| %>
    <p>投稿者：<%= topic.user.name %><p>
      <%= link_to topic_path(topic) do %>
        <p>タイトル：<%= topic.title %></p>
      <% end %>
    <p>本文：<%= topic.content %></p>
    <%= link_to "トピックを編集する", edit_topic_path(topic.id), class: "btn btn-primary" %>
    <%= link_to "トピックを削除する", topic_path(topic.id), class: "btn btn-danger", data: {confirm: '本当に削除していいですか？'}, method: :delete %>
  <% end %>

  <br>
  <hr>
  <%= link_to "トピックを作成する", new_topic_path, class: "btn btn-success btn-block" %>
  </div>
</div>
